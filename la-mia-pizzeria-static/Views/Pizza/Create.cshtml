@{
    Layout = "_MioLayout";
}

@model PizzaFormModel

<h1 class="title mt-4 w-50 text-center">CREATE NEW PIZZA</h1>

<div class="container detailpizza text-center mt-4 mb-4">

    <form asp-controller="Pizza" asp-action="Create" method="post" class="text-center">
        @Html.AntiForgeryToken()
        <div class="mt-4 mb-4 w-50">
            <strong>PIZZA'S NAME:</strong>
            <input type="text" class="form-control" asp-for="Pizza.Name">
            <span asp-validation-for="Pizza.Name" class="text-white"></span>
        </div>

        <div class="mt-4 mb-4 w-50">
            <strong>PIZZA'S URL:</strong>
            <input type="text" class="form-control" asp-for="Pizza.Image">
            <span asp-validation-for="Pizza.Image" class="text-white"></span>
        </div>


        <div class="mt-4 mb-4 w-50 ">
            <strong>PIZZA'S DESCRIPTION:</strong>
            <input type="text" class="form-control" asp-for="Pizza.Description">
            <span asp-validation-for="Pizza.Description" class="text-white"></span>
        </div>

     

        <div class="mt-4 mb-4 w-50">
            <strong>INGREDIENTS:</strong>
            <select asp-for="SelectedIngredientsId"
                    multiple="multiple"
                    size="5"
                    class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                    asp-items="@Model.Ingredients"
                    data-checklist>
            </select>
        </div>


        <div class="mt-4 mb-4 w-50">
            <strong>CATEGORY:</strong>
            <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                <option value="">Select Pizza Category</option>
                @foreach (Category category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>


      


        <div class="mt-4 mb-4 w-50">
            <strong>PIZZA'S PRICE':</strong>
            <input type="number" class="form-control" asp-for="Pizza.Price" min="0">
            <span asp-validation-for="Pizza.Price" class="text-white"></span>
        </div>
        <button type="submit" class="btn btn-danger mt-4 mb-2">GOGOGO!</button>
    </form>
   

</div>