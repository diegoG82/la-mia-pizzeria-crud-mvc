@{
    Layout = "_MioLayout";
}

@model Pizza

    <div class="container detailpizza text-center">

    <div class="title mt-4 w-75"><h1 class="mt-3 mb-3">DETAILS OF: @Model.Name</h1></div>
    
          
        <div class="singleimage mt-4">
        <img width="500" src="@Model.Image">
        </div>

        <div class="title text-white w-75 mt-4 mb-4">
       
         <p>DESCRIPTION: @Model.Description</p>

        <p>
          INGREDIENTS:


            @if (Model.Ingredients != null && Model.Ingredients.Count > 0)
            {
                @string.Join(", ", Model.Ingredients.Select(i => i.Name))
            }
            else
            {
                <span> No ingredients!!! I am a Cloud!!!</span>
            }
        </p>


         <p>CATEGORY:

             @if(Model.Category !=null){
                <span>@Model.Category.Name</span>
             }else{
                <span>No category selected</span>
             }
         
         </p>

         <p>PRICE: @Model.Price yen</p>

        </div>
        
    </div>

