@{
    Layout = "_MioLayout";
}

@model List<Pizza>


@if (Model.Count() == 0)
{
    <h3>Non ci sono articoli da mostrare</h3>
}
else{



    <h1 class="text-center mt-2 mb-4">WELCOME TO KAWAII PIZZA ADMIN PAGE</h1>
    <main>

        <div class="container">
            <div class="row">
                <div class="col-12">

                    <h1 class="text-center mb-4">Pizza's List</h1>


                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id.</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Pizza pizza in Model)
                            {
                                <tr>
                                    <th scope="row">@pizza.Id</th>
                                    <td><img src="@pizza.Image" alt="Pizza1" /></td>
                                    <td>@pizza.Name</td>
                                    <td>@pizza.Description</td>
                                    <td> 200 yen</td>
                                </tr>
                            }
                        
                        </tbody>

                    </table>

                </div>
            </div>
        </div>

    </main>


}