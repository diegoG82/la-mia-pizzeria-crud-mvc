@{
    Layout = "_MioLayout";
}

@model List<Pizza>


@if (Model.Count() == 0)
{
    <h3>Non ci sono articoli da mostrare</h3>
}
else{


    <div class="title"> <h1 class="text-center mt-2 mb-4">WELCOME TO KAWAII PIZZA ADMIN PAGE</h1></div>
   
    <main>
        <div class="text-center mt-4 mb-4">
            <a class=" btn btn-danger" href="@Url.Action("Create", "Pizza")">Create New Pizza!!!</a>
        </div>

        <div class="container adminpizza mt-4 mb-4  ">
            <div class="row mt-2 mb-2">
                <div class="col-12">

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id.</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Pizza pizza in Model)
                            {
                                <tr>
                                    <th scope="row">@pizza.Id</th>
                                    <td><img src="@pizza.Image" alt= "image not found" /></td>
                                    <td>@pizza.Name</td>
                                    <td>@pizza.Description</td>
                                    <td>@pizza.Price yen</td>
                                </tr>
                            }
                        
                        </tbody>

                    </table>

                </div>
            </div>
        </div>

    </main>


}